{
  "name": "festival-timeline-backend",
  "version": "1.0.0",
  "description": "Backend for Festival Timeline Management App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "tsc && cp -r src/db/migrations dist/db/ && cp -r src/db/seeds dist/db/",
    "postbuild": "node dist/db/run-migrations.js",
    "start": "node dist/server.js",
    "db:run-migrations": "bun run src/db/run-migrations.ts",
    "test": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:migrate:time": "bun run src/db/migrate-add-time.ts",
    "db:reset": "bun run src/db/reset.ts",
    "db:seed": "bun run src/db/seed.ts",
    "docs:generate": "swagger-jsdoc -d src/api/swagger.ts -o swagger.json",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "festival",
    "timeline",
    "event-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/json2csv": "^5.0.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.12",
    "papaparse": "^5.5.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "resend": "^6.7.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.4",
    "@types/papaparse": "^5.3.14",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
