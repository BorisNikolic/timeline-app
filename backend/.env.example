# Database
DATABASE_URL=postgresql://timeline_admin:dev_password_123@localhost:5432/festival_timeline

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-replace-in-production
JWT_EXPIRY=24h

# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Whitelist for Registration
# Comma-separated list of allowed email addresses
# Leave empty to allow all registrations (development mode)
# Example: admin@example.com,user1@example.com,user2@example.com
ALLOWED_EMAILS=

# Email Configuration (SMTP)
# For development, use Ethereal.email or Mailpit
# Create test account at https://ethereal.email/
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@festival-timeline.app
SMTP_SECURE=false

# Frontend URL for invitation links
FRONTEND_URL=http://localhost:5173
